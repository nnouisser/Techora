{% extends 'template.html.twig' %}
{% block title %}
    Users
{% endblock %}
{% block page_title%}
    Users
{% endblock %}
{% block body %}
    {{ include('fragments/Date-Jour.html.twig') }}
     <div class="alert alert-warning">
         <a href="{{ path('app_tabcontroller',{nb : 7}) }}"> Stat table </a>
     </div>


<table class="table">
    <tr class="table-active">
        <td>FirstName</td>
        <td>Name</td>
        <td>Age</td>
        <td>Message</td>
    </tr>
    {% for user in users %}
    <tr class="table-{% if loop.index is odd %}danger{% else  %}warning{% endif %}">
        <td>{{ user.firstname }}</td>
        <td>{{ user.name }}</td>
        <td>{{ user.age }}</td>
        <td>
            {{ render(controller('App\\Controller\\FirstcontrillerController::sayhello',{FirstName:user.firstname,name:user.name})) }}

        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
